{
    "name": "delboy1978uk/bone-mail",
    "description": "Mail package for Bone Framework",
    "license": "MIT",
    "authors": [
        {
            "name": "Derek Stephen McLean",
            "email": "delboy1978uk@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": "^8.2",
        "boneframework/bone": "^3.11",
        "laminas/laminas-mail": "^2.22",
        "laminas/laminas-servicemanager": "^3.3"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "delboy1978uk/dev-tools": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Bone\\Mail\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bone\\Test\\Mail\\": "tests/unit/"
        }
    },
    "config": {
        "allow-plugins": {
            "phpro/grumphp": true
        }
    }
}
